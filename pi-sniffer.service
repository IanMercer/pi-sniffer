[Unit]
Description=Pi Sniffer
After=network.target

[Service]
ExecStart=/home/ian/pi-sniffer/scan 192.168.0.120 1883
WorkingDirectory=/home/ian/pi-sniffer
StandardOutput=inherit
StandardError=inherit
Restart=always
MemoryAccounting=true
MemoryHigh=2048K
MemoryMax=4096K

[Install]
WantedBy=multi-user.target
